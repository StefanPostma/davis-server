{
  "manifest_version": 2,
  "name": "Dynatrace Davis - Remote Navigation Receiver",
  "description": "This extension allows Davis to remotely navigate the Dynatrace Platform",
  "version": "1.0",
  "options_ui" : {
    "page": "options.html",
    "chrome_style": true
    },
  "icons": {"128": "connected.png"},
  "browser_action": {
    "default_icon": "disconnected.png",
    "default_title" : "Dynatrace Davis - Remote Navigation Receiver"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "https://ajax.googleapis.com/", 
    "background"
  ],
  "background": {
    "scripts": ["socket.io.js","background.js"],
    "persistent" : true
  }
}
